<Window x:Class="Anhinga.Model.AskPinFromUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="122"
        Width="282"
        Title="Enter the pin">
    <Grid Height="86" Width="262">
        <TextBox Height="26" HorizontalAlignment="Left"
                 Margin="9,12,0,0"
                 Name="PinTextBox" VerticalAlignment="Top"
                 Width="243" />
        <Button Content="OK"
                Height="20"
                HorizontalAlignment="Left"
                Margin="12,54,0,0" 
                Name="OK_button"
                VerticalAlignment="Top"
                Width="57"
                Click="OK_button_Click" />
        <Button Height="20"
                HorizontalAlignment="Left"
                Margin="199,54,0,0" 
                Name="Cancel_button" 
                VerticalAlignment="Top"
                Width="53"
                Content="Cancel"
                IsCancel="True"/>
    </Grid>
</Window>